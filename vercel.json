{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "PYTHONPATH": ".",
        "DATABASE_URL": "postgresql://postgres:Enock-chatApp@db.gzzazuitqyvdsubxwhyo.supabase.co:5432/postgres"
    },
    "buildCommand": "pip install -r requirements.txt",
    "outputDirectory": ".",
    "devCommand": "python app.py"
} 